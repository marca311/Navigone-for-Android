    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        
        <!-- Origin text field -->
        <EditText
            android:id="@+id/originField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/enteredOrigin"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="text" />
        
        <!-- Destination text field -->
        <EditText
            android:id="@+id/destinationField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/originField"
            android:contentDescription="@string/destinationHint"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="text" />
        
        <!-- Suggestion list for both location fields -->

        <!-- <ListView
            android:id="@+id/suggestionList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/originField"
            android:divider="@android:drawable/divider_horizontal_dark" /> -->

        <Button
            android:id="@+id/timeField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/destinationField"
            android:layout_below="@+id/destinationField"
            android:contentDescription="@string/enteredTime"
            android:gravity="left"
            android:text="@string/enteredTime"
            android:textSize="22sp"
            android:onClick="showTimePickerDialog" />

        <Button
            android:id="@+id/dateField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/timeField"
            android:layout_below="@+id/timeField"
            android:contentDescription="@string/enteredDate"
            android:gravity="left"
            android:textSize="22sp"
            android:onClick="showDatePickerDialog" />
        
        
        
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/submit_Button"
            android:onClick="submitFields" />

    </RelativeLayout>
